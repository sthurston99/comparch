module decoder_2to4_tb;
	wire [3:0] o;
	wire [1:0] i;
	wire en;
	
	decoder_2to4 uut (.o(o), .i(i), .en(en));
	
	initial begin
		#10 en = 0;
		#10 i = 2'b00;
		#10 i = 2'b01;
		#10 i = 2'b10;
		#10 i = 2'b11;
		#10 i - 2'b00;
		#10 en = 1;
		#10 i = 2'b00;
		#10 i = 2'b01;
		#10 i = 2'b10;
		#10 i = 2'b11;
		#10 i - 2'b00;
		#10 $stop;
	end
endmodule
